# AWS Configuration for Staging Environment
AWS_REGION=us-east-1
AWS_PROFILE=staging

# AWS Credentials (use AWS CLI or IAM roles in production)
# AWS_ACCESS_KEY_ID=your_staging_access_key_here
# AWS_SECRET_ACCESS_KEY=your_staging_secret_key_here

# ChimeSDK Configuration
CHIME_SDK_MEETINGS_REGION=us-east-1
CHIME_SDK_VOICE_REGION=us-east-1

# Lambda Configuration
LAMBDA_FUNCTION_PREFIX=chime-sdk-staging
LAMBDA_TIMEOUT=60
LAMBDA_MEMORY_SIZE=1024

# S3 Configuration
S3_BUCKET_PREFIX=chime-sdk-staging
S3_RECORDINGS_BUCKET=chime-sdk-recordings-staging

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP_PREFIX=/aws/lambda/chime-sdk-staging

# API Gateway Configuration
API_GATEWAY_STAGE=staging
API_GATEWAY_DOMAIN=api-staging.yourdomain.com

# Cognito Configuration (if using for authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
