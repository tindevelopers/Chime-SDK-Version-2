# AWS Configuration for Production Environment
AWS_REGION=us-east-1
AWS_PROFILE=production

# AWS Credentials (use AWS CLI or IAM roles in production)
# AWS_ACCESS_KEY_ID=your_production_access_key_here
# AWS_SECRET_ACCESS_KEY=your_production_secret_key_here

# ChimeSDK Configuration
CHIME_SDK_MEETINGS_REGION=us-east-1
CHIME_SDK_VOICE_REGION=us-east-1

# Lambda Configuration
LAMBDA_FUNCTION_PREFIX=chime-sdk-prod
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=2048

# S3 Configuration
S3_BUCKET_PREFIX=chime-sdk-prod
S3_RECORDINGS_BUCKET=chime-sdk-recordings-prod

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP_PREFIX=/aws/lambda/chime-sdk-prod

# API Gateway Configuration
API_GATEWAY_STAGE=prod
API_GATEWAY_DOMAIN=api.yourdomain.com

# Cognito Configuration (if using for authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Security Configuration
ENABLE_ALARMS=true
ENABLE_LOGGING=true
ENABLE_MONITORING=true
